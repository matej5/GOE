{% extends 'base.html.twig' %}

{% block title %}Node index{% endblock %}

{% block body %}
    <h1>Node index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Category</th>
                <th>Created</th>
                <th>Modified</th>
                <th>Images</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for node in nodes %}
            <tr>
                <td>{{ node.id }}</td>
                <td>{{ node.title }}</td>
                <td>{{ node.description }}</td>
                <td>{{ node.category }}</td>
                <td>{{ node.created ? node.created|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ node.modified ? node.modified|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ node.images ? node.images|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_node_show', {'id': node.id}) }}">show</a>
                    <a href="{{ path('app_node_edit', {'id': node.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_node_new') }}">Create new</a>
{% endblock %}
